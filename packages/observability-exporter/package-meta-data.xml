<ncs-package xmlns="http://tail-f.com/ns/ncs-packages">
  <name>observability-exporter</name>
  <package-version>1.3.0</package-version>
  <description>Export NSO progress-trace using OpenTelemetry</description>
  <ncs-min-version>5.4</ncs-min-version>

  <component>
    <name>main</name>
    <application>
      <python-class-name>observability_exporter.main.Main</python-class-name>
    </application>
  </component>
  <component>
    <name>Observability Exporter upgrade</name>
    <upgrade>
      <python-class-name>observability_exporter.upgrade.Upgrade</python-class-name>
    </upgrade>
  </component>
</ncs-package>
